extend layout
block content
  form(name="eWalletComplaint" method="post" action="/eWalletComplaintRegistrationForm")
    p Transaction ID
      br
      input(type="text" name="transactionID")
    p Date
      br
      input#datepicker(type="text" name="date")
    p Time
      br
      input#timepicker(type="text" name="time")
      input#timestamp(name="timestamp" type="hidden")
    p Wallet Provider
      br
      select(name="source")
        option(value="payt") Paytm
        option(value="free") freecharge
        option(value="mobi") MobiKwik
        option(value="phon") PhonePe
        option(value="amaz") Amazon Pay
    p Merchant
      br
      select(name="destination")
        option(value="amaz") amazon.in
        option(value="flip") flipkart.com
        option(value="swig") swiggy.com
        option(value="food") foodpanda.com
        option(value="irct") irctc.co.in
    p Error Code
      br
      input(type="number" name="errorCode")
    p Error Description
      br
      input(type="text" name="errorText")
    input(type="submit")